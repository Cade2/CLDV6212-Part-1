@model List<ST10443998_CLDV6212_POE.Models.BlobItemVm>

<h2>Media (Blob Storage)</h2>
<p class="text-success">@TempData["Ok"]</p><p class="text-danger">@TempData["Err"]</p>

<form asp-action="Upload" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="file" name="file" />
    <button class="btn btn-primary">Upload</button>
</form>

<table class="table mt-3">
    <thead>
        <tr><th>Name</th><th>Preview</th><th>Size</th><th>Last Modified</th><th></th></tr>  <!-- added empty header for actions -->
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.Name</td>
                <td>@if (!string.IsNullOrEmpty(b.Url)) {
                <img src="@b.Url" style="max-width:120px" />
            }
</td>
            <td>@(b.Size?.ToString("N0"))</td>
            <td>@b.LastModified</td>
            <td class="text-end">
                <form asp-action="Delete" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="name" value="@b.Name" />
                    <button class="btn btn-sm btn-outline-danger">Delete</button>
                </form>
            </td>
        </tr>
                }
    </tbody>
</table>
