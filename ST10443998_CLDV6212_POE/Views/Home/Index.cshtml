@{
    ViewData["Title"] = "Home";
}

<section class="py-5 bg-light border-bottom">
    <div class="container">
        <div class="row align-items-center gy-4">
            <div class="col-lg-7">
                <h1 class="display-5 fw-bold mb-3">Azure Storage Demo</h1>
                <p class="lead text-muted mb-4">
                    Manage Customers (Tables), Media (Blobs), Contracts (Azure Files), and Queue messages —
                    all in one simple web app. Perfect for your POE screenshots and deployed demo.
                </p>
                <div class="d-flex gap-2 flex-wrap">
                    <a class="btn btn-primary btn-lg px-4" asp-controller="Storage" asp-action="Index">
                        <i class="bi bi-speedometer2 me-2"></i>Open Dashboard
                    </a>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <h2 class="h3 fw-bold mb-4 text-center">Manage each area</h2>
        <div class="row g-4">
            <div class="col-md-6 col-lg-3">
                <a class="text-decoration-none" asp-controller="Storage" asp-action="Index">
                    <div class="card border-0 shadow-sm h-100 hover-shadow">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="badge bg-primary rounded-pill me-3 p-3"><i class="bi bi-speedometer2"></i></div>
                                <h5 class="card-title mb-0">Dashboard</h5>
                            </div>
                            <p class="card-text text-muted small">One page to add, upload, and enqueue everything for fast screenshots.</p>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-6 col-lg-3">
                <a class="text-decoration-none" asp-controller="Customers" asp-action="Index">
                    <div class="card border-0 shadow-sm h-100 hover-shadow">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="badge bg-success rounded-pill me-3 p-3"><i class="bi bi-people-fill"></i></div>
                                <h5 class="card-title mb-0">Customers</h5>
                            </div>
                            <p class="card-text text-muted small">Create and list customer profiles stored in Azure Table Storage.</p>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-6 col-lg-3">
                <a class="text-decoration-none" asp-controller="Media" asp-action="Index">
                    <div class="card border-0 shadow-sm h-100 hover-shadow">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="badge bg-info rounded-pill me-3 p-3"><i class="bi bi-images"></i></div>
                                <h5 class="card-title mb-0">Media</h5>
                            </div>
                            <p class="card-text text-muted small">Upload and preview images in Blob Storage with public URLs.</p>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-6 col-lg-3">
                <a class="text-decoration-none" asp-controller="Contracts" asp-action="Index">
                    <div class="card border-0 shadow-sm h-100 hover-shadow">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="badge bg-warning rounded-pill me-3 p-3"><i class="bi bi-file-earmark-text-fill"></i></div>
                                <h5 class="card-title mb-0">Contracts</h5>
                            </div>
                            <p class="card-text text-muted small">Store and list dummy contract files using Azure Files.</p>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-6 col-lg-3">
                <a class="text-decoration-none" asp-controller="Queue" asp-action="Index">
                    <div class="card border-0 shadow-sm h-100 hover-shadow">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="badge bg-danger rounded-pill me-3 p-3"><i class="bi bi-envelope-paper-fill"></i></div>
                                <h5 class="card-title mb-0">Queue</h5>
                            </div>
                            <p class="card-text text-muted small">Enqueue messages (e.g., “Uploaded image…”) and view peeked messages.</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<style>
    /* subtle hover for cards */
    .hover-shadow:hover { transform: translateY(-2px); box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important; }
</style>
