@model ST10443998_CLDV6212_POE.Models.ProductEntity
<h2>Edit Product</h2>
<form asp-action="Edit" method="post" class="row g-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="PartitionKey" />
    <input type="hidden" asp-for="RowKey" />
    <input type="hidden" asp-for="ETag" />
    <div class="col-md-8">
        <label class="form-label">Title</label>
        <input class="form-control" asp-for="Title" />
    </div>
    <div class="col-md-4">
        <label class="form-label">Price</label>
        <input class="form-control" asp-for="Price" type="number" step="0.01" />
    </div>
    <div class="col-12">
        <button class="btn btn-primary">Save</button>
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </div>
</form>
